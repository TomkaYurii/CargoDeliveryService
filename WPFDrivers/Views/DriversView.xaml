<UserControl x:Class="WPFDrivers.Views.DriversView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDrivers.Views"
             xmlns:vm="clr-namespace:WPFDrivers.ViewModels"
             xmlns:h="clr-namespace:WPFDrivers.Helpers" 
             xmlns:uc="clr-namespace:WPFDrivers.Controls" 
             
             d:DataContext="{d:DesignInstance Type=vm:DriversViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,32,0,0" TextWrapping="Wrap" Text="DRIVERS" VerticalAlignment="Top" Height="70" Width="188" RenderTransformOrigin="0.11,0.074" FontSize="48"/>
        <Button Command="{Binding GetDriverCommand}"
            Content="GetDriver" 
                HorizontalAlignment="Left" 
                Margin="46,127,0,0" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="-1.361,0.808" 
                Height="50" 
                Width="192"/>

    </Grid>
</UserControl>
